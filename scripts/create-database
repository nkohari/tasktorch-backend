#!/usr/bin/env ./node_modules/coffee-script/bin/coffee

DatabaseCreator = require 'test/framework/DatabaseCreator'

dbname = process.argv[2]
unless dbname?.length > 0
  console.error "Usage: create-database <dbname>"
  process.exit(1)

console.log "Creating database #{dbname}"
DatabaseCreator.create dbname, (err) ->
  if err?
    console.error "Error creating database: #{err}"
    process.exit(1)
  console.log "Database created successfully"
  process.exit(0)
